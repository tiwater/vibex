{
  "name": "@vibex/local",
  "version": "0.1.0",
  "description": "Local SQLite + filesystem adapters for Vibex",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@vibex/core": "workspace:*",
    "better-sqlite3": "^12.4.6",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external @vibex/core",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  }
}

